<main class="login-main">
 <div class="signup_area">
    <h1 class="welcome-head-text">Welcome to Hebe</h1>
    <p class="welcome-sub-text">...Best Goal Tracker Tool</p>
  <img class="design-image" src="code.png">
</div>

<!--- sign up form -->

<div class="signup-form">
    <h2 class="register-head-text">Register</h2>
    <p class="register-sub-text">Sign up with your details to get started!</p>
     <% include ./partials/messages %>
    <form name="RegForm" action="/register" method="POST"> 
      <label for="first-name">
        <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="First Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
            required
          />
      </label>

      <label for="last-name">
        <input
            type="name"
            id="name2"
            name="name2"
            class="form-control"
            placeholder="Last Name"
            value="<%= typeof name2 != 'undefined' ? name2 : '' %>"
            required
          />
      </label>

      <label for="email">
        <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            required
          />
      </label>

      <label for="password">
        <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            required
          />
      </label>

      <label for="confirm-password">
        <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            required
          />
      </label>
      <p class="login-link"><a href="/login">Existing member?</a></p>
      <button type="submit" class="register-btn">Register</button>
    </form>
</div>
</div>
</main>

